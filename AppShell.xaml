<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Pokedex_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Pokedex_app.Views"
    xmlns:local="clr-namespace:Pokedex_app"
    Shell.FlyoutBehavior="Disabled">
    <TabBar>
        <Tab Title="Main Page">
            <ShellContent Title="Main Page"
                         ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="My List">
            <ShellContent Title="My List" ContentTemplate="{DataTemplate views:MyList}" />
        </Tab>
    </TabBar>
</Shell>
